@inject HttpClient _client

<h3>Visitors</h3>

<EditForm Model="@visitorModel" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>Visitor Name: </label>
            <div>
                <InputText @bind-Value="@visitorModel.VisitorName" class="form-control" />
                <ValidationMessage For="@(() => visitorModel.VisitorName)" />
            </div>
        </div>

        <div class="form-group">
            <label>Contact Number: </label>
            <div>
                <InputText @bind-Value="@visitorModel.VisitorContactNumber" class="form-control" />
                <ValidationMessage For="@(() => visitorModel.VisitorContactNumber)" />
            </div>
        </div>

        <div class="form-group">
            <label>Email: </label>
            <div>
                <InputText @bind-Value="@visitorModel.VisitorEmail" class="form-control" />
                <ValidationMessage For="@(() => visitorModel.VisitorEmail)" />
            </div>
        </div>

        <div class="form-group">
            <label>Company: </label>
            <div>
                <InputText @bind-Value="@visitorModel.VisitorCompany" class="form-control" />
                <ValidationMessage For="@(() => visitorModel.VisitorCompany)" />
            </div>
        </div>
    </fieldset>

    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }
</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Visitor visitorModel { get; set; } = new Visitor();
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback<EditContext> OnValidSubmit { get; set; }
    private IList<Visitor>? Visitors;

    protected async override Task OnInitializedAsync()
    {
        Visitors = await _client.GetFromJsonAsync<List<Visitor>>($"{Endpoints.VisitorsEndpoint}");
    }
}
