@page "/organizers/create/"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3 class=" card-title">Create New Organizer</h3>
<hr />
<br />

<FormComponent ButtonText="Create Organizer" organizerModel="organizerModel" OnValidSubmit="CreateOrganizer" />


@code {
    Organizer organizerModel = new Organizer();

    private IList<Organizer>? Organizers;

    protected override async Task OnInitializedAsync()
    {
        Organizers = await _client.GetFromJsonAsync<List<Organizer>>($"{Endpoints.OrganizersEndpoint}");
    }

    private async Task CreateOrganizer()
    {
        await _client.PostAsJsonAsync(Endpoints.OrganizersEndpoint, organizerModel);
        _navManager.NavigateTo("/organizers/");
    }
}